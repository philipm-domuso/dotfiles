{
    "git.confirmSync": false,
    "editor.mouseWheelZoom": true,
    "editor.rulers": [80, 100],
    "window.menuBarVisibility": "toggle",

    // vim settings
    "macros": {
        "saveAndExitVimInsertMode": [
            "workbench.action.files.save",
            "extension.vim_escape"
        ]
    },
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        },
        {
            "before": ["<C-e>"],
            "after": [],
            "commands": [
                {
                    "command": "cursorEnd"
                }
            ]
        },
        {
            "before": ["<C-a>"],
            "after": [],
            "commands": [{ "command": "cursorHome" }]
        }
    ],

    // "vim.useSystemClipboard": true,
    "git.enableSmartCommit": true,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Cascadia Code',  'Victor Mono Medium', 'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "gitlens.keymap": "alternate",
    "window.titleBarStyle": "custom",
    "emmet.triggerExpansionOnTab": true,
    "vim.easymotion": true,
    "python.linting.pylintEnabled": false,
    "git.autofetch": true,
    "cSpell.userWords": ["reddit"],
    "window.restoreWindows": "none",
    "workbench.activityBar.visible": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "vim.gdefault": true,
    "window.autoDetectColorScheme": true,
    "workbench.preferredDarkColorTheme": "Dracula",
    "workbench.colorTheme": "GitHub Dark High Contrast",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "python.formatting.provider": "black",
    "python.linting.prospectorEnabled": true,
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.languageServer": "Pylance",
    "csharpsortusings.sort.usings.splitGroups": false,
    "python.formatting.blackArgs": ["--line-length", "120"],
    "editor.linkedEditing": true,
    "workbench.sideBar.location": "right",
    "mssql.connections": [
        {
            "connectionString": "Server=(localdb)\\localdev;Integrated Security=True;Initial Catalog=discogs",
            "profileName": "LocalDev-Discogs",
            "database": "discogs",
            "user": "",
            "server": "(localdb)\\localdev",
            "authenticationType": "Integrated",
            "password": ""
        }
    ],
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "debug.toolBarLocation": "docked",
    "workbench.welcomePage.hiddenCategories": ["Beginner", "Setup"],
    "hediet.vscode-drawio.local-storage": "",
    "editor.fontSize": 13,
    "vim.foldfix": true,
    "editor.bracketPairColorization.enabled": true,
    "python.defaultInterpreterPath": "C:\\Python39\\python.exe",
    "workbench.tree.indent": 16,
    "terminal.integrated.autoReplies": {
        "Terminate batch job (Y/N)": "Y\r"
    },
    "editor.inlineSuggest.enabled": true,
    "sqltools.useNodeRuntime": true,
    "emmet.includeLanguages": {
        "django-html": "html"
    },
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "python": false
    },
    "git.mergeEditor": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "window.zoomLevel": 1,
    "editor.stickyScroll.enabled": true
}
