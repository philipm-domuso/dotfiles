[color]
	diff = auto
	status = auto
	branch = auto
[user]
	name = Philip Mateescu
	email = github@philipmat.net
[pretty]
	changes = format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[alias]
	ctags = !.git/hooks/ctags
	stat  = status -s
	s     = status -s
	ca    = commit -a -m
	co    = checkout
	cof   = checkout -f
	fap   = fetch --all --prune
	lo    = !git log --oneline --decorate
	lg    = log --color --graph --pretty=changes --abbrev-commit
	lf    = log --color --graph --pretty=changes --abbrev-commit -p
	ln    = log --color --graph --pretty=changes --abbrev-commit --name-only
[core]
	excludesfile = /Users/philip/.gitignore_global
	editor = /usr/bin/vim
	quotepath = false
[init]
	templatedir = ~/.git_template
[difftool "sourcetree"]
	cmd = /usr/local/bin/mvimdiff $LOCAL $BASE $REMOTE
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/kdiff3.app/Contents/MacOS/kdiff3 \"$BASE\" \"$LOCAL\" \"$REMOTE\" -o \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
